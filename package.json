{
  "name": "hipst",
  "version": "0.0.2",
  "description": "fullstack framework",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "mito11",
  "license": "MIT",
  "keywords": ["fullstack", "framework"],
  "files": ["dist"],
  "bin": {
    "hipst": "dist/src/cli/hipst.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "start": "bun run index.ts",
    "build": "tsc -p tsconfig.build.json && bun run scripts/postbuild.ts",
    "prepublishOnly": "bun run build",
    "hipst": "bun run src/cli/hipst.ts",
    "example:basic": "bun run examples/basic.ts",
    "example:counter": "bun run examples/counter.ts",
    "example:static": "bun run examples/static.ts",
    "dev:counter": "bun --hot examples/counter.ts",
    "serve:counter": "bun run hipst serve --ui examples/counter.app.ts#App --api examples/counter.api.ts#myApi --port 3000",
    "fe:build": "bun run hipst build",
    "example:fe:counter": "bun run hipst build --app examples/counter.app.ts#App --out dist/counter-fe"
  },
  "dependencies": {
    "csstype": "^3.1.3"
  },
  "peerDependencies": {
    "bun-types": "^1.2.22"
  },
  "engines": {
    "bun": ">=1.2.0"
  }
}
